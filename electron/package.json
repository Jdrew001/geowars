{
  "name": "geowars",
  "version": "0.0.5",
  "main": "./main.js",
  "author": "Marco Chierchia",
  "license": "MIT",
  "repository": "https://github.com/Jdrew001/geowars",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "scripts": {
    "copy": "yarn --cwd ../client build && node ./scripts/copy-from-client.js",
    "electron": "electron .",
    "dev": "yarn --cwd ../client dev --host & yarn electron",
    "preview": "yarn copy && yarn electron",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "build": "yarn copy && yarn app:dist",
    "build-app": "electron-builder build --win --publish never",
    "deploy-app": "electron-builder build --win --publish always"
  },
  "devDependencies": {
    "electron": "^21.4.2",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "cheerio": "^1.0.0-rc.12",
    "electron-updater": "^5.3.0",
    "fs-extra": "^10.1.0",
    "update-electron-app": "^2.0.1"
  },
  "build": {
    "appId": "com.dtatkison.geowars",
    "productName": "Geowars",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  },
  "nodeversion": "14.18.1",
  "npmversion": "8.13.2"
}
